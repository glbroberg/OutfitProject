@model OutfitProject.Models.Bottom

@{
    ViewBag.Title = "Details";
}
<hr />

<div>
    <h4>Bottom</h4>

    <div class="panel panelForm">
        <div class="container-fluid">
            <div class="row">

                @*  Details Section  *@
                <div class="col-md-6 detailText">
                    <h2>@Html.DisplayFor(model => model.BottomName)</h2>
                    <h4>
                        @Html.DisplayFor(model => model.BottomColor)
                        @Html.DisplayFor(model => model.BottomType)
                    </h4>

                    <p>
                        Season: @Html.DisplayFor(model => model.BottomSeason) <br />
                        Occasion: @Html.DisplayFor(model => model.BottomOccasion)
                    </p>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.BottomID }, new { role = "button", @class = "greyButton" })
                        @Html.ActionLink("Back to List", "Index", new { id = Model.BottomID }, new { role = "button", @class = "greyButton" })
                        @Html.ActionLink("Delete", "Delete", new { id = Model.BottomID }, new { role = "button", @class = "greyButton" })
                    </p>
                </div>

                @*  Image Section  *@
                <div class="col-md-6 detailImg">
                    <img src="@Html.DisplayFor(model => model.BottomPhoto)" />
                </div>
            </div>
        </div>
    </div>
</div>
