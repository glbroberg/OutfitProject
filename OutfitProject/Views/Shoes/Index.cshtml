@model IEnumerable<OutfitProject.Models.Sho>

@{
    ViewBag.Title = "Index";
}

<h2>Shoes</h2>
<p>Current number of shoes: @ViewBag.ShoeTotal</p>

<p>
    @Html.ActionLink("Would you like to add another pair of shoes?", "Create", new { role = "button", @class = "greyButton" })
</p>

<div class="jumbotron">
    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <h4>@Html.DisplayFor(modelItem => item.ShoeName)</h4>
                    <div class="thumbnail thumbBorder">
                        <a href="@Url.Action( "Details","Shoes",new { id=item.ShoeID } )">
                            <img class="indexForm" src="@Html.DisplayFor(modelItem => item.ShoePhoto)">
                        </a>
                    </div>
                </div>
                
            }

        </div>
    </div>
</div>


